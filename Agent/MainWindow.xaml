<Window x:Class="Agent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Agent"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Button x:Name="btnListen" Click="btnListen_Click">Listen for clients</Button>
        <ListBox Grid.Row="1" x:Name="lstProcesses">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="local:ProcessVM">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=ProcessId}" />
                        <TextBlock Text="{Binding Path=ProcessName}" />
                        <TextBlock Text="{Binding Path=ProcessTitle}" />
                        <Image Width="150" Height="150" Source="{Binding Path=WindowPicture}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Grid.Row="2" Click="Button_Click">Get Processes</Button>
    </Grid>
</Window>
